# Look for all the eamxx_***_output.yaml files in the case folder and
# sets vertical remap

CASEROOT=$(./xmlquery --value CASEROOT)
YAML_EDIT=$CIMEROOT/../components/eamxx/scripts/edit-output-stream

YAML_FILES=$(ls -1 | grep 'eamxx_.*_output.yaml')
for fname in ${YAML_FILES}; do
  echo "SETTING VREMAP ON $fname"
  $YAML_EDIT -f $fname --vertical-remap-file \${DIN_LOC_ROOT}/atm/scream/maps/map_ne4np4_to_ne2np4_mono.vert_remap.20230306.nc
done
